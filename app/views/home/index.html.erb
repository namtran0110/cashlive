  <h2>Other Popular stores:</h2>
  <% if @other_stores.count > 0 %>
    <ul>
      <% @other_stores.each do |store| %>
        <%= render partial: 'stores/store_listing', locals: {store: store} %>
      <% end %>
    </ul>
  <% else %>
    <p>All stores have already been listed above!</p>
  <% end %>
