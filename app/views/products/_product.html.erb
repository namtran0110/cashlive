<div class="wrapper">
  <div class="col-md-3" data-target="#myModal-<%= product.id %>" data-toggle="modal">
    <div class="content">
      <div class="grid">
        <figure class="effect-apollo" style="width: 400px; height: 300px;">
          <%= image_tag product.image.url(:original), class: 'card-img-top' %>
          <figcaption>
            <h3><%= product.name %></h3>
            <p>See More</p>
          </figcaption>
        </figure>
      </div>
    </div>
  </div>

  <!-- The Modal -->
  <div id="myModal-<%= product.id %>" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
      <div class="row">
        <div class="col-md-6">
          <%= image_tag product.image.url(:original), class: 'card-img-top' %>
        </div>
        <div class="col-md-6 text-left">
          <span class="close" data-dismiss="modal">&times;</span>
          <h3><%= product.name %></h3>
          <p><%= product.description %></p>
          <p><%= product.price %> VND</p>
          <%= form_for @order_item do |f| %>
              <%= f.number_field :quantity, value: 1, min: 1, class: 'form-control' %>
              <%= f.hidden_field :unit_price, value: product.price %>
              <%= f.hidden_field :product_id, value: product.id %>
              <%= f.submit "Buy now", class: "btn CL-button" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
