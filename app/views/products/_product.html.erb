<div class="wrapper">
  <div class="card" style="width: 18rem;">
    <%= image_tag product.image.url(:original), class: 'card-img-top' %>
    <div class="card-block">
      <h4 class="card-title"><%= product.name %></h4>
      <p class="card-text"><%= product.price %> VND</p>
      <button data-target="#myModal-<%= product.id %>" data-toggle="modal">SEE MORE</button>
    </div>
  </div>

  <!-- The Modal -->
  <div id="myModal-<%= product.id %>" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
      <div class="row">
        <div class="col-md-6">
          <%= image_tag product.image.url(:original), class: 'card-img-top' %>
        </div>
        <div class="col-md-6">
          <span class="close" data-dismiss="modal">&times;</span>
          <h3 class="card-title"><%= product.name %></h3>
          <p><%= product.description %></p>
          <p><%= product.price %></p>
          <%= form_for @order_item do |f| %>
            <%= f.number_field :quantity, value: 1, min: 1 %>
            <%= f.hidden_field :unit_price, value: product.price %>
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.submit "Buy now", class: "btn btn-primary"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
